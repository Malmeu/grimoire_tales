---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';

// Simulation de données admin
const stats = {
  totalUsers: 5234,
  totalStories: 1256,
  pendingReports: 12,
  pendingApprovals: 8
};

const recentReports = [
  { id: '1', type: 'story', title: 'Contenu inapproprié', reporter: 'User123', date: '2024-03-20', status: 'pending' },
  { id: '2', type: 'comment', title: 'Spam', reporter: 'Reader42', date: '2024-03-19', status: 'pending' },
  { id: '3', type: 'user', title: 'Comportement abusif', reporter: 'Author99', date: '2024-03-19', status: 'reviewed' },
];

const pendingStories = [
  { id: '1', title: 'Nouvelle histoire fantasy', author: 'NewWriter', date: '2024-03-20', type: 'novel' },
  { id: '2', title: 'BD Cyberpunk', author: 'ArtistX', date: '2024-03-19', type: 'comic' },
];
---

<BaseLayout title="Dashboard Admin">
  <Navbar />
  
  <main class="pt-24 pb-20 px-4">
    <div class="max-w-7xl mx-auto">
      <div class="mb-8">
        <h1 class="gothic-title text-3xl md:text-4xl mb-2">Dashboard Admin</h1>
        <p class="text-parchment/70">Gestion et modération de la plateforme</p>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 mb-8">
        <div class="parchment-card p-6 rounded-xl">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-gold-old/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-2xl font-gothic text-gold-old">{stats.totalUsers.toLocaleString()}</div>
              <div class="text-sm text-parchment/60">Utilisateurs</div>
            </div>
          </div>
        </div>
        
        <div class="parchment-card p-6 rounded-xl">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-gold-old/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
              </svg>
            </div>
            <div>
              <div class="text-2xl font-gothic text-gold-old">{stats.totalStories.toLocaleString()}</div>
              <div class="text-sm text-parchment/60">Histoires</div>
            </div>
          </div>
        </div>
        
        <div class="parchment-card p-6 rounded-xl">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-blood-red/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-blood-red" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
              </svg>
            </div>
            <div>
              <div class="text-2xl font-gothic text-blood-red">{stats.pendingReports}</div>
              <div class="text-sm text-parchment/60">Signalements</div>
            </div>
          </div>
        </div>
        
        <div class="parchment-card p-6 rounded-xl">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-lg bg-gold-old/20 flex items-center justify-center">
              <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <div>
              <div class="text-2xl font-gothic text-gold-old">{stats.pendingApprovals}</div>
              <div class="text-sm text-parchment/60">En attente</div>
            </div>
          </div>
        </div>
      </div>

      <div class="grid lg:grid-cols-2 gap-8">
        <!-- Recent Reports -->
        <section class="parchment-card rounded-xl p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-gothic text-xl text-gold-old">Signalements Récents</h2>
            <a href="/admin/reports" class="text-sm text-gold-old hover:text-gold-bright transition-colors">
              Voir tout →
            </a>
          </div>
          
          <div class="space-y-3">
            {recentReports.map(report => (
              <div class="flex items-center justify-between p-3 bg-dark-void/30 rounded-lg">
                <div class="flex items-center gap-3">
                  <div class={`w-2 h-2 rounded-full ${report.status === 'pending' ? 'bg-blood-red' : 'bg-green-500'}`}></div>
                  <div>
                    <div class="text-parchment-light">{report.title}</div>
                    <div class="text-xs text-parchment/50">
                      {report.type} • par {report.reporter} • {report.date}
                    </div>
                  </div>
                </div>
                <button class="px-3 py-1 text-sm border border-gold-old/30 text-gold-old rounded hover:bg-gold-old/10 transition-colors">
                  Examiner
                </button>
              </div>
            ))}
          </div>
        </section>

        <!-- Pending Approvals -->
        <section class="parchment-card rounded-xl p-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="font-gothic text-xl text-gold-old">En Attente d'Approbation</h2>
            <a href="/admin/approvals" class="text-sm text-gold-old hover:text-gold-bright transition-colors">
              Voir tout →
            </a>
          </div>
          
          <div class="space-y-3">
            {pendingStories.map(story => (
              <div class="flex items-center justify-between p-3 bg-dark-void/30 rounded-lg">
                <div>
                  <div class="text-parchment-light">{story.title}</div>
                  <div class="text-xs text-parchment/50">
                    {story.type} • par {story.author} • {story.date}
                  </div>
                </div>
                <div class="flex gap-2">
                  <button class="px-3 py-1 text-sm bg-green-600/20 text-green-400 rounded hover:bg-green-600/30 transition-colors">
                    Approuver
                  </button>
                  <button class="px-3 py-1 text-sm bg-blood-red/20 text-blood-red rounded hover:bg-blood-red/30 transition-colors">
                    Rejeter
                  </button>
                </div>
              </div>
            ))}
          </div>
        </section>
      </div>

      <!-- Quick Actions -->
      <section class="mt-8 grid sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <a href="/admin/users" class="parchment-card p-4 rounded-lg hover:border-gold-old/50 transition-all flex items-center gap-3">
          <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <span class="text-parchment-light">Gérer les utilisateurs</span>
        </a>
        <a href="/admin/stories" class="parchment-card p-4 rounded-lg hover:border-gold-old/50 transition-all flex items-center gap-3">
          <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
          </svg>
          <span class="text-parchment-light">Gérer les contenus</span>
        </a>
        <a href="/admin/analytics" class="parchment-card p-4 rounded-lg hover:border-gold-old/50 transition-all flex items-center gap-3">
          <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
          </svg>
          <span class="text-parchment-light">Analytiques</span>
        </a>
        <a href="/admin/settings" class="parchment-card p-4 rounded-lg hover:border-gold-old/50 transition-all flex items-center gap-3">
          <svg class="w-6 h-6 text-gold-old" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          <span class="text-parchment-light">Paramètres</span>
        </a>
      </section>
    </div>
  </main>
</BaseLayout>
