---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';
import Footer from '../../../components/Footer.astro';
import CommentFeed from '../../../components/CommentFeed';
import { supabase } from '../../../lib/supabase';

export async function getStaticPaths() {
  const { data: stories } = await supabase
    .from('stories')
    .select('slug')
    .eq('type', 'novel')
    .eq('status', 'published');
  
  return (stories || []).map((s: any) => ({
    params: { slug: s.slug }
  }));
}

const { slug } = Astro.params;

// RÃ©cupÃ©rer les donnÃ©es depuis Supabase
const { data: novelData } = await supabase
  .from('stories')
  .select(`
    *,
    users!stories_author_id_fkey (username, avatar_url, bio_geek),
    chapters (id, title, chapter_number, word_count, created_at)
  `)
  .eq('slug', slug)
  .eq('type', 'novel')
  .eq('status', 'published')
  .single();

if (!novelData) {
  return Astro.redirect('/404');
}

const novel = {
  id: novelData.id,
  title: novelData.title,
  slug: novelData.slug,
  author: {
    username: novelData.users?.username || 'Anonyme',
    avatar_url: novelData.users?.avatar_url,
    bio: novelData.users?.bio_geek || ''
  },
  description: novelData.description || '',
  coverUrl: novelData.cover_url,
  genre: novelData.genre,
  tags: novelData.tags || [],
  views: novelData.views || 0,
  rating: 0,
  wordCount: (novelData.chapters || []).reduce((acc: number, ch: any) => acc + (ch.word_count || 0), 0),
  chapters: (novelData.chapters || []).map((ch: any) => ({
    id: ch.id,
    number: ch.chapter_number,
    title: ch.title,
    wordCount: ch.word_count || 0,
    publishedAt: ch.created_at
  })).sort((a: any, b: any) => a.number - b.number),
  status: novelData.status === 'published' ? 'PubliÃ©' : 'En cours',
  created_at: novelData.created_at,
  updated_at: novelData.updated_at
};

const formatViews = (num: number) => {
  if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
  if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
  return num.toString();
};

const formatWordCount = (num: number) => {
  if (num >= 1000) return (num / 1000).toFixed(0) + 'K';
  return num.toString();
};

const estimatedReadTime = Math.ceil(novel.wordCount / 200);
---

<BaseLayout 
  title={novel.title} 
  description={novel.description}
  image={novel.coverUrl}
>
  <Navbar />
  
  <main class="pt-20 pb-20">
    <!-- Hero Section -->
    <section class="relative">
      <div class="absolute inset-0 h-[500px]">
        <img 
          src={novel.coverUrl} 
          alt={novel.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg-primary)] via-[var(--bg-primary)]/80 to-[var(--bg-primary)]/40"></div>
      </div>
      
      <div class="relative max-w-6xl mx-auto px-4 pt-32 pb-12">
        <div class="flex flex-col md:flex-row gap-8">
          <!-- Cover -->
          <div class="flex-shrink-0">
            <div class="relative group">
              <img 
                src={novel.coverUrl} 
                alt={novel.title}
                class="w-48 md:w-64 rounded-lg shadow-2xl floating-shadow"
              />
              <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                <a 
                  href={`/novel/${slug}/chapter/1`}
                  class="px-6 py-3 bg-[var(--accent-primary)] text-white rounded-lg font-semibold hover:opacity-90 transition-opacity"
                >
                  ðŸ“– Lire
                </a>
              </div>
            </div>
          </div>
          
          <!-- Info -->
          <div class="flex-1">
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="px-3 py-1 bg-[var(--accent-primary)]/20 text-[var(--accent-primary)] text-sm rounded-full font-medium">
                Novel
              </span>
              <span class="px-3 py-1 bg-[var(--bg-secondary)] text-[var(--text-secondary)] text-sm rounded-full">
                {novel.genre}
              </span>
              <span class="px-3 py-1 bg-green-500/20 text-green-400 text-sm rounded-full">
                {novel.status}
              </span>
            </div>
            
            <h1 class="gothic-title text-4xl md:text-5xl mb-4">{novel.title}</h1>
            
            <div class="flex items-center gap-4 mb-6">
              <a href={`/authors/${novel.author.username}`} class="flex items-center gap-3 group">
                <div class="w-10 h-10 rounded-full bg-[var(--bg-secondary)] flex items-center justify-center text-[var(--accent-primary)] font-semibold">
                  {novel.author.username.charAt(0)}
                </div>
                <span class="text-[var(--text-primary)] group-hover:text-[var(--accent-primary)] transition-colors">
                  {novel.author.username}
                </span>
              </a>
              <span class="text-[var(--text-secondary)]">â€¢</span>
              <span class="text-[var(--text-secondary)]">{novel.chapters.length} chapitres</span>
            </div>
            
            <p class="text-[var(--text-secondary)] leading-relaxed mb-6 max-w-2xl">
              {novel.description}
            </p>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-6">
              {novel.tags.map(tag => (
                <a 
                  href={`/catalogue?tag=${tag}`}
                  class="px-3 py-1 bg-[var(--bg-primary)]/50 text-[var(--text-secondary)] text-sm rounded hover:text-[var(--accent-primary)] transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
            
            <!-- Stats -->
            <div class="flex flex-wrap items-center gap-4 md:gap-6 mb-8 text-sm">
              <div class="flex items-center gap-2 text-[var(--text-secondary)]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                {formatViews(novel.views)} vues
              </div>
              <div class="flex items-center gap-2 text-[var(--text-secondary)]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                {formatWordCount(novel.wordCount)} mots
              </div>
              <div class="flex items-center gap-2 text-[var(--text-secondary)]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                ~{estimatedReadTime} min
              </div>
              <div class="flex items-center gap-1">
                {[1, 2, 3, 4, 5].map(star => (
                  <svg 
                    class={`w-5 h-5 ${star <= Math.round(novel.rating) ? 'text-[var(--accent-primary)]' : 'text-[var(--text-secondary)]/30'}`}
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
                <span class="ml-2 text-[var(--text-secondary)]">{novel.rating}</span>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex flex-wrap gap-4">
              <a 
                href={`/novel/${slug}/chapter/1`}
                class="glow-button px-8 py-3 text-lg flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"/>
                </svg>
                Commencer la lecture
              </a>
              <button class="px-6 py-3 border border-[var(--accent-primary)]/50 text-[var(--accent-primary)] rounded hover:bg-[var(--accent-primary)]/10 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
                Favoris
              </button>
              <button class="px-6 py-3 border border-[var(--accent-primary)]/50 text-[var(--accent-primary)] rounded hover:bg-[var(--accent-primary)]/10 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Partager
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Chapters List -->
    <section class="max-w-6xl mx-auto px-4 py-12">
      <h2 class="gothic-title text-2xl mb-6 flex items-center gap-3">
        <svg class="w-6 h-6 text-[var(--accent-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
        </svg>
        Table des matiÃ¨res
      </h2>
      
      <div class="parchment-card rounded-xl overflow-hidden">
        {novel.chapters.map((chapter, idx) => (
          <a 
            href={`/novel/${slug}/chapter/${chapter.number}`}
            class={`flex items-center justify-between p-5 hover:bg-[var(--accent-primary)]/5 transition-colors group ${idx !== novel.chapters.length - 1 ? 'border-b border-[var(--card-border)]' : ''}`}
          >
            <div class="flex items-center gap-4">
              <span class="w-10 h-10 flex items-center justify-center bg-[var(--bg-secondary)] rounded-lg text-[var(--accent-primary)] font-semibold">
                {chapter.number}
              </span>
              <div>
                <h3 class="text-[var(--text-primary)] font-medium group-hover:text-[var(--accent-primary)] transition-colors">
                  {chapter.title}
                </h3>
                <div class="flex items-center gap-3 text-sm text-[var(--text-secondary)]">
                  <span>{formatWordCount(chapter.wordCount)} mots</span>
                  <span>â€¢</span>
                  <span>~{Math.ceil(chapter.wordCount / 200)} min</span>
                </div>
              </div>
            </div>
            <div class="flex items-center gap-4">
              <span class="text-[var(--text-secondary)] text-sm hidden sm:inline">
                {new Date(chapter.publishedAt).toLocaleDateString('fr-FR', { day: 'numeric', month: 'short', year: 'numeric' })}
              </span>
              <svg class="w-5 h-5 text-[var(--text-secondary)] group-hover:text-[var(--accent-primary)] group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Author Info -->
    <section class="max-w-6xl mx-auto px-4 py-8">
      <div class="parchment-card rounded-xl p-6">
        <h3 class="gothic-title text-xl mb-4">Ã€ propos de l'auteur</h3>
        <div class="flex items-start gap-4">
          <div class="w-16 h-16 rounded-full bg-[var(--bg-secondary)] flex items-center justify-center text-[var(--accent-primary)] text-2xl font-semibold">
            {novel.author.username.charAt(0)}
          </div>
          <div class="flex-1">
            <a href={`/authors/${novel.author.username}`} class="text-[var(--text-primary)] font-semibold hover:text-[var(--accent-primary)] transition-colors">
              {novel.author.username}
            </a>
            <p class="text-[var(--text-secondary)] mt-2">{novel.author.bio}</p>
            <a 
              href={`/authors/${novel.author.username}`}
              class="inline-flex items-center gap-2 mt-3 text-[var(--accent-primary)] hover:text-[var(--accent-secondary)] transition-colors text-sm"
            >
              Voir tous ses Ã©crits
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Comments -->
    <section class="max-w-6xl mx-auto px-4 py-12">
      <CommentFeed client:load storyId={novel.id} />
    </section>
  </main>
  
  <Footer />
</BaseLayout>
