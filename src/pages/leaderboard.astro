  if (rank === 1) return 'ü•á';
  if (rank === 2) return 'ü•à';
  if (rank === 3) return 'ü•â';
  return rank.toString();
};

const typeLabels: Record<string, string> = {
  novel: 'Novel',
  book: 'Livre',
  comic: 'BD'
};
