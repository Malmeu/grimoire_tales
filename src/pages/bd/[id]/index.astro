---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Navbar from '../../../components/Navbar.astro';
import Footer from '../../../components/Footer.astro';
import CommentFeed from '../../../components/CommentFeed';
import { supabase } from '../../../lib/supabase';

// DÃ©sactiver le prerendering pour cette page (rendu SSR dynamique)
export const prerender = false;

const { id } = Astro.params;

// RÃ©cupÃ©rer les donnÃ©es depuis Supabase
const { data: bdDataRaw } = await supabase
  .from('stories')
  .select(`
    *,
    users!stories_author_id_fkey (username, avatar_url, bio_geek),
    chapters (id, title, chapter_number, images)
  `)
  .eq('id', id)
  .eq('type', 'comic')
  .eq('status', 'published')
  .single();

if (!bdDataRaw) {
  return Astro.redirect('/404');
}

const bdData = bdDataRaw as any;

const bd = {
  id: bdData.id,
  title: bdData.title,
  author: {
    username: bdData.users?.username || 'Anonyme',
    avatar_url: bdData.users?.avatar_url,
    bio: bdData.users?.bio_geek || ''
  },
  description: bdData.description || '',
  coverUrl: bdData.cover_url,
  genre: bdData.genre,
  tags: bdData.tags || [],
  views: bdData.views || 0,
  rating: 0,
  chapters: (bdData.chapters || []).map((ch: any) => ({
    id: ch.id,
    number: ch.chapter_number,
    title: ch.title,
    pages: (ch.images || []).length,
    coverUrl: (ch.images || [])[0] || bdData.cover_url
  })).sort((a: any, b: any) => a.number - b.number),
  status: bdData.status === 'published' ? 'PubliÃ©' : 'En cours',
  created_at: bdData.created_at,
  updated_at: bdData.updated_at
};

const formatViews = (num: number) => {
  if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M';
  if (num >= 1000) return (num / 1000).toFixed(1) + 'K';
  return num.toString();
};

const totalPages = bd.chapters.reduce((acc, ch) => acc + ch.pages, 0);
---

<BaseLayout 
  title={bd.title} 
  description={bd.description}
  image={bd.coverUrl}
>
  <Navbar />
  
  <main class="pt-20 pb-20">
    <!-- Hero Section -->
    <section class="relative">
      <div class="absolute inset-0 h-[500px]">
        <img 
          src={bd.coverUrl} 
          alt={bd.title}
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-[var(--bg-primary)] via-[var(--bg-primary)]/80 to-[var(--bg-primary)]/40"></div>
      </div>
      
      <div class="relative max-w-6xl mx-auto px-4 pt-32 pb-12">
        <div class="flex flex-col md:flex-row gap-8">
          <!-- Cover -->
          <div class="flex-shrink-0">
            <div class="relative group">
              <img 
                src={bd.coverUrl} 
                alt={bd.title}
                class="w-48 md:w-64 rounded-lg shadow-2xl floating-shadow"
              />
              <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg flex items-center justify-center">
                <a 
                  href={`/bd/${id}/read`}
                  class="px-6 py-3 bg-[var(--accent-primary)] text-white rounded-lg font-semibold hover:opacity-90 transition-opacity"
                >
                  ðŸ“– Lire
                </a>
              </div>
            </div>
          </div>
          
          <!-- Info -->
          <div class="flex-1">
            <div class="flex flex-wrap gap-2 mb-4">
              <span class="px-3 py-1 bg-[var(--accent-primary)]/20 text-[var(--accent-primary)] text-sm rounded-full font-medium">
                BD / Manga
              </span>
              <span class="px-3 py-1 bg-[var(--bg-secondary)] text-[var(--text-secondary)] text-sm rounded-full">
                {bd.genre}
              </span>
              <span class="px-3 py-1 bg-green-500/20 text-green-400 text-sm rounded-full">
                {bd.status}
              </span>
            </div>
            
            <h1 class="gothic-title text-4xl md:text-5xl mb-4">{bd.title}</h1>
            
            <div class="flex items-center gap-4 mb-6">
              <a href={`/authors/${bd.author.username}`} class="flex items-center gap-3 group">
                <div class="w-10 h-10 rounded-full bg-[var(--bg-secondary)] flex items-center justify-center text-[var(--accent-primary)] font-semibold">
                  {bd.author.username.charAt(0)}
                </div>
                <span class="text-[var(--text-primary)] group-hover:text-[var(--accent-primary)] transition-colors">
                  {bd.author.username}
                </span>
              </a>
              <span class="text-[var(--text-secondary)]">â€¢</span>
              <span class="text-[var(--text-secondary)]">{bd.chapters.length} chapitres</span>
              <span class="text-[var(--text-secondary)]">â€¢</span>
              <span class="text-[var(--text-secondary)]">{totalPages} pages</span>
            </div>
            
            <p class="text-[var(--text-secondary)] leading-relaxed mb-6 max-w-2xl">
              {bd.description}
            </p>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-6">
              {bd.tags.map(tag => (
                <a 
                  href={`/catalogue?tag=${tag}`}
                  class="px-3 py-1 bg-[var(--bg-primary)]/50 text-[var(--text-secondary)] text-sm rounded hover:text-[var(--accent-primary)] transition-colors"
                >
                  #{tag}
                </a>
              ))}
            </div>
            
            <!-- Stats -->
            <div class="flex items-center gap-6 mb-8">
              <div class="flex items-center gap-2 text-[var(--text-secondary)]">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                {formatViews(bd.views)} vues
              </div>
              <div class="flex items-center gap-1">
                {[1, 2, 3, 4, 5].map(star => (
                  <svg 
                    class={`w-5 h-5 ${star <= Math.round(bd.rating) ? 'text-[var(--accent-primary)]' : 'text-[var(--text-secondary)]/30'}`}
                    fill="currentColor" 
                    viewBox="0 0 20 20"
                  >
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                ))}
                <span class="ml-2 text-[var(--text-secondary)]">{bd.rating}</span>
              </div>
            </div>
            
            <!-- Actions -->
            <div class="flex flex-wrap gap-4">
              <a 
                href={`/bd/${id}/chapter/1`}
                class="glow-button px-8 py-3 text-lg flex items-center gap-2"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Commencer la lecture
              </a>
              <button class="px-6 py-3 border border-[var(--accent-primary)]/50 text-[var(--accent-primary)] rounded hover:bg-[var(--accent-primary)]/10 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                </svg>
                Favoris
              </button>
              <button class="px-6 py-3 border border-[var(--accent-primary)]/50 text-[var(--accent-primary)] rounded hover:bg-[var(--accent-primary)]/10 transition-colors flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
                Partager
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Chapters Grid -->
    <section class="max-w-6xl mx-auto px-4 py-12">
      <h2 class="gothic-title text-2xl mb-6 flex items-center gap-3">
        <svg class="w-6 h-6 text-[var(--accent-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
        </svg>
        Chapitres
      </h2>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {bd.chapters.map((chapter) => (
          <a 
            href={`/bd/${id}/chapter/${chapter.number}`}
            class="group parchment-card rounded-xl overflow-hidden hover:border-[var(--accent-primary)]/50 transition-all"
          >
            <div class="relative h-48 overflow-hidden">
              <img 
                src={chapter.coverUrl} 
                alt={chapter.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
              <div class="absolute bottom-0 left-0 right-0 p-4">
                <span class="text-[var(--accent-primary)] text-sm font-medium">Chapitre {chapter.number}</span>
                <h3 class="text-white font-semibold">{chapter.title}</h3>
              </div>
              <div class="absolute top-3 right-3 px-2 py-1 bg-black/60 rounded text-white text-xs">
                {chapter.pages} pages
              </div>
            </div>
            <div class="p-4 flex items-center justify-between">
              <span class="text-[var(--text-secondary)] text-sm">Cliquez pour lire</span>
              <svg class="w-5 h-5 text-[var(--accent-primary)] group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Comments -->
    <section class="max-w-6xl mx-auto px-4 py-12">
      <CommentFeed client:load storyId={bd.id || '1'} />
    </section>
  </main>
  
  <Footer />
</BaseLayout>
