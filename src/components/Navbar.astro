---
import ThemeSwitcher from './ThemeSwitcher';
import AuthButtons from './AuthButtons';

const navLinks = [
  { href: '/', label: 'Accueil' },
  { 
    label: 'Catalogue', 
    submenu: [
      { href: '/novels', label: 'Novels' },
      { href: '/comics', label: 'BD' },
    ]
  },
  { href: '/art', label: 'Art' },
  { href: '/podcast', label: 'Podcast' },
  { href: '/leaderboard', label: 'Classement' },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 glass-dark">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo Grimoire -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-10 h-10 relative">
          <svg viewBox="0 0 40 40" class="w-full h-full">
            <defs>
              <linearGradient id="bookGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" style="stop-color:#e8c07b"/>
                <stop offset="100%" style="stop-color:#b89778"/>
              </linearGradient>
            </defs>
            <!-- Book shape -->
            <path d="M5 8 L20 5 L35 8 L35 35 L20 32 L5 35 Z" fill="url(#bookGrad)" opacity="0.9"/>
            <path d="M20 5 L20 32" stroke="#1a0d1e" stroke-width="1"/>
            <!-- Mystical symbol -->
            <circle cx="20" cy="18" r="6" fill="none" stroke="#1a0d1e" stroke-width="1.5"/>
            <path d="M17 18 L23 18 M20 15 L20 21" stroke="#1a0d1e" stroke-width="1.5"/>
          </svg>
          <div class="absolute inset-0 bg-gold-old/20 blur-xl group-hover:bg-gold-old/40 transition-all duration-300 rounded-full"></div>
        </div>
        <span class="font-gothic text-xl text-gold-old group-hover:text-gold-bright transition-colors">
          Grimoire Tales
        </span>
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          link.submenu ? (
            <div class="relative group/dropdown">
              <button class="text-parchment-light hover:text-gold-old transition-colors duration-300 flex items-center gap-1">
                {link.label}
                <svg class="w-4 h-4 transition-transform group-hover/dropdown:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
                </svg>
              </button>
              <div class="absolute top-full left-0 mt-2 w-48 glass-dark rounded-lg border border-gold-old/20 opacity-0 invisible group-hover/dropdown:opacity-100 group-hover/dropdown:visible transition-all duration-300 z-50">
                {link.submenu.map(sublink => (
                  <a 
                    href={sublink.href}
                    class="block px-4 py-3 text-parchment-light hover:text-gold-old hover:bg-gold-old/10 transition-colors first:rounded-t-lg last:rounded-b-lg"
                  >
                    {sublink.label}
                  </a>
                ))}
              </div>
            </div>
          ) : (
            <a 
              href={link.href}
              class="text-parchment-light hover:text-gold-old transition-colors duration-300 relative group"
            >
              {link.label}
              <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-gold-old group-hover:w-full transition-all duration-300"></span>
            </a>
          )
        ))}
      </div>

      <!-- Theme Switcher & Auth Buttons -->
      <div class="flex items-center gap-3">
        <!-- Theme Switcher -->
        <ThemeSwitcher client:load />
        
        <!-- Auth Buttons (dynamically shows login/register or user menu) -->
        <AuthButtons client:load />
        
        <!-- Mobile Menu Button -->
        <button id="mobile-menu-btn" class="md:hidden p-2 text-parchment-light hover:text-gold-old">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden glass-dark border-t border-gold-old/20">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map(link => (
        link.submenu ? (
          <div class="space-y-2">
            <span class="block py-2 text-gold-old font-semibold">{link.label}</span>
            <div class="pl-4 space-y-2 border-l border-gold-old/30">
              {link.submenu.map(sublink => (
                <a 
                  href={sublink.href}
                  class="block py-2 text-parchment-light hover:text-gold-old transition-colors"
                >
                  {sublink.label}
                </a>
              ))}
            </div>
          </div>
        ) : (
          <a 
            href={link.href}
            class="block py-2 text-parchment-light hover:text-gold-old transition-colors"
          >
            {link.label}
          </a>
        )
      ))}
    </div>
  </div>
</nav>

<script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
